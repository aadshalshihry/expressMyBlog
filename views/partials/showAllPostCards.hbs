<div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 card" style="margin: 0rem;">
    <img class="card-img-top" src="https://cdn.pixabay.com/photo/2016/06/18/17/42/image-1465348_960_720.jpg" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{this.subtitle}}</h6>
        <p class="card-text">{{this.body}}</p>

    </div>
    <div class="row">
        <div class="offset-1 col-1">
            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
        </div>
        <div class="col-2">
            <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
        </div>
        <div class="col-2">
            <i class="fa fa-eye" aria-hidden="true">46</i>
        </div>
        <div class="col-5">
            <div class="stars-outer">
                <div class="stars-inner"></div>
            </div>
        </div>

    </div>
    

    
    {{ renderUserPostCardLinks }}

  <script>
      const starsTotal = 5;

      document.addEventListener('DOMContentLoaded', getRating);

      function getRating() {
          document.querySelector('.stars-inner').style.width = "88%";
      }
  </script>
</div>

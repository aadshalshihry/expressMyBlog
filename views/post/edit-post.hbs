
<div class="userForm">
    <form action="/post/new" method="post" id="post-new-form">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="title" name="title" class="form-control" value="{{post.title}}" id="title" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="subtitle">Subtitle</label>
            <input type="subtitle" name="subtitle" class="form-control" value="{{post.subtitle}}" id="subtitle" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="body">Body</label>
            <br>
            <textarea id="body" name="body" cols="60" rows="10">{{post.body}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>
    <a href="/post"><button class="btn btn-primary">All Post</button></a>
</div>


<div class="userForm">
    <form action="/user/edit" method="post" id="user-edit-form">
        <div class="row">
            <div class="col-4 form-group">
                <label for="name">Name</label>
                <input type="name" name="name" class="form-control" id="name" value="{{user.name}}" placeholder="Enter name">
            </div>
            <div class="col-4 form-group">
                <label for="username">Username</label>
                <input type="username" name="username" class="form-control" id="username" value="{{user.username}}" placeholder="Enter username">
            </div>
            <div class="col-4 form-group">
                <label for="email">Password</label>
                <input type="email" name="email" class="form-control" id="email" value="{{user.email}}" placeholder="Email">
            </div>
        </div>
        <div class="row">
            <div class="col-4 form-group">
                <label for="exampleInputPassword1">Old Password</label>
                <input type="password" name="oldPassword" id="user-edit-form-oldPassword" class="form-control" placeholder="Old Password">
            </div>
            <div class="col-4 form-group">
                <label for="exampleInputPassword1">New Password</label>
                <input type="password" name="newPassword" id="user-edit-form-newPassword" class="form-control"  placeholder="New Password">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-4 form-group">
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="password" name="confirmPassword"id="user-edit-form-confirmPassword" class="form-control" placeholder="Confirm Password">
            </div>
        </div>
        <div class="row">
            <button type="submit" class="offset-1 col-2 profile-save-btn btn btn-primary">Save</button>
            <a class="col-3" href="/proflie"><button class="profile-save-btn btn btn-primary">Go to proflie</button></a>

        </div>
    </form>
</div>

